<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/user"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Kycprocess">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_margin="15dp"
        android:hint="Please Uplode the documents and make sure they are clear and easy to read."
        android:textColor="@color/black"
        android:textSize="20sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/imagebtn"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            android:backgroundTint="@color/white"
            android:layout_weight="1">

            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Uplode Your Profile Picture"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Adharfront"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            android:backgroundTint="@color/white"
            android:layout_weight="1"
            >

            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Uplode Your Adhaar Card Front Image"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/Adharback"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        android:backgroundTint="@color/white"
        android:layout_weight="1"
        >

        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Uplode Your Adhaar Card Back Image"
            android:textColor="@color/black"
            android:textSize="18sp"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:hint="Note:- Your documents will only be used to handle your request and will be store securely."
        android:textColor="@color/black"
        android:textSize="20sp" />


        <androidx.cardview.widget.CardView
            android:id="@+id/docsubmit"
            android:layout_width="93dp"
            android:layout_height="34dp"
            android:layout_gravity="right"
            android:layout_margin="20dp"
            android:layout_weight="2"
            android:backgroundTint="@color/btn"
            app:cardCornerRadius="12dp">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="S U B M I T"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>


    </LinearLayout>

</ScrollView>